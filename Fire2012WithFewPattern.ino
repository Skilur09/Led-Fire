void FillLeds(int LedColor)
{
  CRGB color = ColorFromPalette( gPal, LedColor);
  for( int j = 0; j < NUM_LEDS; j++)  
     {  leds[j] = color; 
        leds2[j] = color;
        leds3[j] = color;
        leds4[j] = color;}
}

